<h1>Recipe Form</h1>
<%= form_for @recipe do |f| %>
  <%= f.label "Recipe Title:" %>
  <%= f.text_field :title %> <br> <br>

  <%= f.label "Ingredients" %> <br>
  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :name %>
    <%= i.text_field :name %> <br>
    <%= i.label :quantity %>
    <%= i.text_field :quantity %> <br> <br>
  <% end %>
  <%= f.submit %>
<% end %>